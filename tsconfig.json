{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["ES2020"],
  },
  "files": ["./src/index.ts"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
